<div id="signupModal" class="reveal-modal small" data-reveal>
  <%= form_for(:user, url: user_registration_path) do |f| %>
    <div class="row">
      <div class="small-12 columns">
        <div class="small-12 columns">
          <h3>Registrate</h3>
        </div>
        <div class="small-12 columns">
          <%= f.text_field :email, autofocus: true, placeholder: "Matrícula", required: true %>
        </div>
        <div class="small-12 columns">
          <%= f.password_field :password, placeholder: "Contraseña" %>
        </div>
        <div class="small-12 columns">
          <input placeholder="Grupo" required="required" type="text" >
        </div>
        <div class="small-12 columns">
          <label>Enfoque
            <select>
              <option value=""></option>
              <option value="cs">Computer Science</option>
              <option value="business">Negocios</option>
              <option value="design">Diseño</option>
            </select>
          </label>
        </div>
        <div class="small-12 columns">
          <%= f.submit "Registrame", class: "button right" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
