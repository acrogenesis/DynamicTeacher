<div id="signupModal" class="reveal-modal small" data-reveal>
  <%= form_for(:user, url: user_registration_path) do |f| %>
    <div class="row">
      <div class="small-12 columns">
        <div class="small-12 columns">
          <h3>Registrate</h3>
        </div>
        <div class="small-12 columns">
          <%= f.email_field :email, autofocus: true, placeholder: "Matrícula", required: true %>
        </div>
        <div class="small-12 columns">
          <%= f.password_field :password, placeholder: "Contraseña" %>
        </div>
        <div class="small-12 columns">
          grupo
        </div>
        <div class="small-12 columns">
          enfoque
        </div>
        <div class="small-12 columns">
          <%= f.submit "Registrame", class: "button right" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
