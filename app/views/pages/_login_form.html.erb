<%= form_for(:user, url: user_session_path) do |f| %>
  <div class="row">
    <div class="small-12 medium-6 medium-centered columns">
      <div class="small-12 columns">
        <h3>Iniciar Sesión</h3>
      </div>
      <div class="small-12 columns">
        <%= f.text_field :email, autofocus: true, placeholder: "Matrícula", required: true %>
      </div>
      <div class="small-12 columns">
        <%= f.password_field :password, placeholder: "Contraseña" %>
      </div>
      <div class="small-12 columns">
        <%= f.submit "Iniciar Sesión", class: "button right" %>
      </div>
      <div class="small-12 columns">
        <hr />
        <h4><b>¿No tienes cuenta?</b></h4><h5><a href="#" data-reveal-id="signupModal">Regístrate</a></h5>
      </div>
    </div>
  </div>
<% end %>
