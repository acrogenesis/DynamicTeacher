<%= link_to 'Crear Grupo', new_admin_group_path, class: 'button tiny radius' %>

<table>
  <thead>
    <tr>
      <th>Horario</th>
      <th>Nombre</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= group.schedule %></td>
        <td><%= group.name %></td>
        <td>
          <%= link_to 'Editar', edit_admin_group_path(group), class: 'button tiny radius no-margin' %>
          <%= link_to 'Borrar', admin_groups_path(group), class: 'button tiny radius alert no-margin', method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
