<div class="row">
  <div class="small-12 columns">
    <h1>Editar Examen Diagnostico</h1>

    <%= form_for [:admin, @diagnostic_exam] do |f| %>
    <%= display_flash_messages %>

    <div class="field">
      <%= f.label :subject %><br>
      <%= f.text_field :subject %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
    <% end %>
  </div>
</div>

<div class="row">
  <h4>Preguntas Actuales</h4>
  <% @questions.each do |question| %>
    <div class="small-12 columns">
      <%= question.question %>
    </div>
  <% end %>
  <div class="small-12 columns">
    <%= link_to 'Agregar Preguntas', new_admin_diagnostic_exam_question_path(@diagnostic_exam) %>
  </div>
</div>

<div class="row">
  <div class="small-12 columns">
    <%= link_to 'Back', admin_dashboard_path %>
  </div>
</div>
