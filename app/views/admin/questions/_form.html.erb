<%= form_for [:admin, :diagnostic_exam, @question] do |f| %>
  <%= display_flash_messages %>

  <div class="field">
    <%= f.label :question %><br>
    <%= f.text_field :question %>
  </div>

  <%= f.fields_for :answers do |builder| %>
    <%= render 'answer_fields', f: builder %>
  <% end %>
  <%= link_to_add_fields "Add Field", f, :answers %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
