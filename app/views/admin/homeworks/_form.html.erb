<%= simple_form_for [:admin, @homework] do |f| %>
  <%= display_flash_messages %>

  <%= f.input :level, collection: [0, 1, 2], include_blank: false %>
  <%= f.input :hw_type, collection: User.focus, include_blank: false %>
  <%= f.input :subject, collection: Subject.subjects, include_blank: false %>
  <%= f.input :description %>
  <%= f.input :deadline %>

  <%= f.button :submit %>
<% end %>
