<h1>Listing homeworks</h1>

<table>
  <thead>
    <tr>
      <th>Level</th>
      <th>Type</th>
      <th>Subject</th>
      <th>Description</th>
      <th>Deadline</th>
      <th>Delivered</th>
      <th>Comment</th>
      <th>Grade</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @homeworks.each do |homework| %>
      <tr>
        <td><%= homework.level %></td>
        <td><%= homework.hw_type %></td>
        <td><%= homework.subject %></td>
        <td><%= homework.description %></td>
        <td><%= homework.deadline %></td>
        <td><%= homework.delivered %></td>
        <td><%= homework.comment %></td>
        <td><%= homework.grade %></td>
        <td><%= link_to 'Show', admin_homework_path(homework) %></td>
        <td><%= link_to 'Edit', edit_admin_homework_path(homework) %></td>
        <td><%= link_to 'Destroy', admin_homework_path(homework), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Homework', new_admin_homework_path %>
