<div class="row">
  <div class="small-12 columns">
    <h1>Tarea <%= @homework.subject %></h1>
  </div>
</div>

<%= display_flash_messages %>

<div class="row">
  <div class="small-12 columns">
    Level: <%= @homework.level %>
  </div>
</div>

<div class="row">
  <div class="small-12 columns">
    Type: <%= @homework.hw_type %>
  </div>
</div>

<div class="row">
  <div class="small-12 columns">
    Description: <%= @homework.description %>
  </div>
</div>

<div class="row">
  <div class="small-12 columns">
    Deadline: <%= @homework.deadline %>
  </div>
</div>
<br/>
<div class="row">
  <div class="small-12 columns">
    <div class="panel">
      <%= simple_form_for @homework_user do |f| %>
        <%= f.hidden_field :homework_id, value: @homework.id %>
        <%= f.hidden_field :user_id, value: current_user.id %>
        <%= f.input :file, label: 'Archivo de tarea:' %>

        <%= f.button :submit %>
      <% end %>
    </div>

  </div>
</div>

<div class="row">
  <div class="small-12 columns">
    <%= link_to 'Regresar', dashboard_path(anchor: 'tareas'), class: 'button tiny radius' %>
  </div>
</div>
